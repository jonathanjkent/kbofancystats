results$Home <- fct_recode(results$Home, "KT Wiz" = "KT Wiz Suwon")
results$Away <- fct_recode(results$Away, "Kia Tigers" = "KIA Tigers")
results$Away <- fct_recode(results$Away, "KT Wiz" = "KT Wiz Suwon")
